<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.faculdade.wsreceitaclient.CadastrarItemReceitaActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/tableLayout6">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Reg. Anvisa"
                android:id="@+id/textView8" />

            <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtRegistroAnvisa" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nome"
                android:id="@+id/textView10" />

            <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtNomeItemReceita" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Uso"
                android:id="@+id/textView11" />

            <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtUsoItemReceita" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Instrução"
                android:id="@+id/textView12" />

            <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtUsoInstrucaoReceita" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contra-Indicação"
                android:id="@+id/textView13" />

            <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtContraIndicacao" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tableLayout6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Cadastrar item"
                android:id="@+id/btnCadItemNaReceita" />

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:id="@+id/btnVoltarParaListadeItens" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
